# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_DATABASE=influencer_match

# Redis Configuration (Optional - set to true if Redis is installed)
REDIS_ENABLED=false
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT Configuration (REQUIRED - Generate a strong random secret)
# Example: openssl rand -base64 64
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Server Configuration
PORT=3000
NODE_ENV=development

# CORS Configuration
CORS_ORIGIN=http://localhost:5173

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=900000

# Account Lockout
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION_MS=1800000

# Stripe Configuration (for Admin Dashboard Payment Integration)
# Get your keys from: https://dashboard.stripe.com/test/apikeys
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Stripe Connect Configuration (for Influencer-Company Payments)
# Get Connect Client ID from: https://dashboard.stripe.com/settings/applications
STRIPE_CONNECT_CLIENT_ID=ca_your_connect_client_id_here
STRIPE_PLATFORM_FEE_PERCENT=10
STRIPE_CURRENCY=usd

# Admin Dashboard Configuration
ADMIN_JWT_SECRET=your-admin-super-secret-jwt-key-change-this-in-production

# AI Chatbot Configuration
# ML Service URL (Python FastAPI service for NLP)
ML_SERVICE_URL=http://localhost:8000

# AI Matching Configuration
# ML Matching Service URL (Python FastAPI service for match prediction)
ML_MATCHING_SERVICE_URL=http://localhost:8001

# OpenAI API Key (required for AI-powered chatbot responses)
# Get your key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here

# Email Configuration (optional - for chatbot notifications)
# SendGrid or any SMTP provider
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASS=your-sendgrid-api-key-here
SMTP_FROM=notifications@yourdomain.com

# Frontend URL (for CORS and email links)
FRONTEND_URL=http://localhost:5173
